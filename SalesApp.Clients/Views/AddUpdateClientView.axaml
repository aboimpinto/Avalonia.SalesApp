    <ContentView.Buttons>
      <IconButton 
        DockPanel.Dock="Left"
        Classes="ContentLeftAlignment"
        Content="Edit" 
        Kind="Pencil" />

      <IconButton 
        DockPanel.Dock="Right"
        Classes="ContentRightAlignment"
        Content="Cancel" 
