<UserControl 
  xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
  x:Class="SalesApp.Views.DialogView">

  <Grid 
    RowDefinitions="25 * 25"
    Margin="10" 
    VerticalAlignment="Stretch" 
    HorizontalAlignment="Stretch">

    <TextBlock Grid.Row="0" Text="Modal Dialog header" />

    <TextBlock Grid.Row="1" Text="Modal Dialog body" />

    <Button Grid.Row="2" Content="Close" Command="{Binding CloseCommand}" />

  </Grid>
</UserControl>
